# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Next Auth
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret
AUTH_SECRET=""

# Next Auth Github Provider
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# Prisma
# https://www.prisma.io/docs/reference/database-reference/connection-urls#env
DATABASE_URL="postgresql://postgres:password@localhost:5432/tensara-app"
NEXT_PUBLIC_GA_ID=""

MODAL_CHECKER_SLUG=""
MODAL_BENCHMARK_SLUG=""

MODAL_ENDPOINT=""

# dstack.ai Configuration for AMD GPU Orchestration
# These environment variables are used by the dstack Python SDK
# Configuration can also be done via: dstack config
# Get your credentials from https://dstack.ai or your dstack server
DSTACK_TOKEN=""
DSTACK_WORKSPACE="tensara"
DSTACK_SERVER_URL="https://sky.dstack.ai"

# Backend Configuration for AMD GPU VMs
# Primary backend: AMD DevCloud (MI300X @ $1.99/hour)
DSTACK_BACKEND="amddevcloud"

# AMD DevCloud Configuration
# Get your API token from https://amd.digitalocean.com (API section)
# Token should look like: dop_v1_abc123def456...
DSTACK_AMDDEVCLOUD_API_KEY=""
DSTACK_AMDDEVCLOUD_PROJECT_NAME="tensara-gpu-compute"

# Hot Aisle Configuration (FALLBACK - commented out)
# Uncomment if AMD DevCloud has issues
# DSTACK_BACKEND="hotaisle"
# DSTACK_HOTAISLE_API_KEY=""
# DSTACK_HOTAISLE_PROJECT_ID=""
# DSTACK_HOTAISLE_REGION="us-east-1"

# VM Orchestrator Settings
AMD_VM_IDLE_TIMEOUT=600          # 10 minutes in seconds
AMD_VM_WARMUP_ENABLED=true
AMD_DEFAULT_GPU="MI300X"
AMD_VM_MAX_CONCURRENT=3          # Max 3 MI300X VMs simultaneously
AMD_REUSE_POLICY="aggressive"    # Keep VMs warm across users

# Quick Start Package Selection
AMD_DEVCLOUD_IMAGE="pytorch"     # Use PyTorch Quick Start package
AMD_DEVCLOUD_ROCM_VERSION="7.0"

# Security Settings (Docker Container Isolation)
AMD_CONTAINER_ISOLATION=true
AMD_CONTAINER_MEMORY_LIMIT="16GB"
AMD_CONTAINER_CPU_LIMIT="4.0"
AMD_CONTAINER_NETWORK_DISABLED=true

# Cost Tracking (AMD DevCloud Grant)
AMD_MI300X_HOURLY_RATE=1.99      # $1.99/hour for MI300X
AMD_GRANT_CREDITS_TOTAL=1400.00  # Your $1,400 AMD grant
AMD_COST_ALERT_THRESHOLD=0.8     # Alert at 80% credit usage

# Python Path for engine scripts (optional, defaults to python3)
PYTHON_PATH="python3"